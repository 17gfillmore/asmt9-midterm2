@{
    ViewBag.Title = "All movies";
}

@model IEnumerable<Movie>


<div >
    <table style="width:90%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Category</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
                
            </tr>
        </thead>
        <tbody>
           @foreach (var x in Model)
           {
            <tr>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Category</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <a asp-action="Update" asp-route-movieId="@x.MovieId">Update</a>
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="movieId" value="@x.MovieId" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
           }
        </tbody>
    </table>
</div>

    